/* pages/index/index.wxss */
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20rpx;
}

.placeholder {
    width: 600rpx;
    height: 600rpx;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
    border: 2rpx dashed #ccc;
    position: relative;
}

.placeholder-text {
    font-size: 24rpx;
    color: #999;
}

.image {
    max-width: 100%;
    max-height: 100%;
}

.button {
    margin-bottom: 20rpx;
}

.load-progress {
    position: fixed;
    width: 100%;
    height: 4rpx;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
}

.load-progress-bar {
    width: 100%;
    height: 100%;
    background-color: #4caf50;
}

.load-progress-spinner {
    width: 24rpx;
    height: 24rpx;
    border: 2rpx solid #4caf50;
    border-radius: 50%;
    border-top: 2rpx solid transparent;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.result {
    margin-top: 20rpx;
}
