/* pages/index/index.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

button {
  margin-top: 20rpx;
  width: 300rpx;
  height: 80rpx;
  background: transparent;
  border-width: 4rpx;
  font-size: 30rpx;
  border-color: black;
  color: black;
  font-weight: bold;
  user-select: none;
  border-radius: 20rpx;
  box-shadow: 4rpx 4rpx 0px 0px rgba(0, 0, 0, 0.75);
}

button:hover {
  background: black;
  color: white;
  transition: 0.3s;
}

button:active {
  background: rgb(65, 65, 65);
  box-shadow: 2rpx 2rpx 0px 0px rgba(0, 0, 0, 0.75);
}
